@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}


<div class="container container-fluid row">
    <div class="col">
        <h4 class="text-start">Editar Cliente: @Model.Nome</h4>
    </div>
    <hr />
    <div class="row g-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="row g-2">
                <div class="input-group mb-3 col">
                    <span class="input-group-text" id="inputGroup-sizing-default">Nome</span>
                    <input asp-for="Nome" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
            </div>
            <div class="row g-2">
                <div class="form-floating mb-3 col">
                    <input asp-for="Endereco" type="text" class="form-control" id="inEndereco" placeholder="name@example.com">
                    <label asp-for="Endereco" for="inEndereco">Endereço</label>
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-6">
                    <input asp-for="Telefone" type="text" class="form-control" id="inTel" placeholder="name@example.com">
                    <label asp-for="Telefone" for="inTel">Telefone</label>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>
            <div class="row align-baseline">
                <div class="input-group mb-3 col">
                    <span class="input-group-text"><svg bootstrap-icon="List" width="14" height="14" aria-label="Cpf"></svg></span>
                    <div class="form-floating">
                        <input asp-for="Cpf" type="text" class="form-control" id="inCpf" placeholder="Cpf">
                        <label asp-for="Cpf" for="inCpf">Cpf</label>
                    </div>
                </div>
                <div class="input-group mb-3 col">
                    <span class="input-group-text"><svg bootstrap-icon="Person" width="14" height="14" aria-label="Cpf"></svg></span>
                    <div class="form-floating">
                        <input asp-for="Email" type="text" class="form-control" id="inEmail" placeholder="Email">
                        <label asp-for="Email" for="inEmail">email@@email.com</label>
                    </div>
                </div>
                <div class="input-group mb-3 col">
                    <span class="input-group-text"><svg bootstrap-icon="CalendarDate" width="14" height="14" aria-label="Data"></svg></span>
                    <div class="form-floating">
                        <input asp-for="Nascimento" type="date" class="form-control" id="inNascimento" placeholder="Nascimento">
                        <label asp-for="Nascimento" for="inNascimento">Nascimento</label>
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col justify-content-center align-content-center text-center">
                    <input type="submit" value="Aplicar Alterações" class="btn btn-success" />
                    <a asp-action="Index"><svg bootstrap-icon="ArrowReturnLeft" width="24" height="24" aria-label="Voltar" class="text-danger"></svg></a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
