@model IEnumerable<Somativa.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<div class="container container-fluid">
    <div class="text-center">
        <h1>Produtos</h1>
        <p>
            <a asp-action="Create" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Requer Cargo de Operador">
                Adicionar Produto <span class="badge text-bg-warning"><svg bootstrap-icon="PersonPlusFill" width="24" height="24" aria-label="Adicionar Cliente" class="text-warning"></svg></span>
            </a>
        </p>
    </div>
    <div class="rowg-2">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-4 col-lg-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                        <p class="card-text">
                            <strong>Estoque:</strong> @Html.DisplayFor(modelItem => item.Estoque)<br>
                            <strong class="text-success">R$:</strong> @Html.DisplayFor(modelItem => item.Preco)<br>
                            <strong>Categoria:</strong> @Html.DisplayFor(modelItem => item.Categoria.Nome)<br>
                            <strong>Fornecedor:</strong> @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                        </p>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.ProdutoId"><svg bootstrap-icon="PencilSquare" width="32" height="32" aria-label="Editar" class="text-primary p-1"></svg></a>
                            <a asp-action="Details" asp-route-id="@item.ProdutoId"><svg bootstrap-icon="InfoCircleFill" width="32" height="32" aria-label="Detalhes" class="text-warning p-1"></svg></a>
                            <a asp-action="Delete" asp-route-id="@item.ProdutoId"><svg bootstrap-icon="TrashFill" width="32" height="32" aria-label="Apagar" class="text-danger  p-1"></svg></a>
                        </td>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
